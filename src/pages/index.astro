---
import { defaultLang } from "../i18n/lang";
---

<!doctype html>
<html lang={defaultLang}>
  <head>
    <title>Manuel Mendoza</title>
    <meta charset="UTF-8" />
    <meta name="description" content="Soy un desarrollador de software especializado en frontend y con experiencia en backend." />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="apple-touch-icon" sizes="180x180" href="/sticker.webp">
    <link rel="icon" type="image/svg+xml" sizes="180x180" href="/sticker.webp" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- SEO -->
    <!-- Twitter -->
    <meta name="twitter:title" content="Manuel Mendoza">
    <meta name="twitter:description" content="Soy un desarrollador de software especializado en frontend y con experiencia en backend.">
    <meta name="twitter:image" content='http://imgfz.com/i/hZoi5CE.png'>
    <meta name="twitter:card" content="summary_large_image">
    
    <!-- OG: Open Graph -->
    <meta property="og:title" content="Manuel Mendoza">
    <meta property="og:description" content="Soy un desarrollador de software especializado en frontend y con experiencia en backend.">
    <meta property="og:image" content='http://imgfz.com/i/hZoi5CE.png'>
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:url" content="https://portafio-astro.vercel.app">
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Manuel Mendoza">
    <script>
      const userLang = navigator.language.split("-")[0];
      const supportedLangs = ["es", "en"];
      const lang = supportedLangs.includes(userLang) ? userLang : "es";
      window.location.pathname = `/${lang}/`;
    </script>
  </head>
  <body>
    <p>Redirigiendo...</p>
  </body>
</html>
