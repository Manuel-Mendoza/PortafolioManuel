---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/layout/Navbar.astro";
import { Hero } from "../../components/layout/Hero";
import Experiencia from "../../components/layout/Experiencia.jsx";
import { listLang } from "../../i18n/lang";

interface Props {
  lang: string;
}

export const prerender = true;

export async function getStaticPaths() {
  return Object.entries(listLang).map(([lang]) => ({
    params: { lang },
    props: { lang },
  }));
}

const { lang } = Astro.params as Props;
---

<Layout>
  <Navbar />
  <Hero client:load lang={lang} />
  <br />
  <Experiencia client:load lang={lang} />
</Layout>
